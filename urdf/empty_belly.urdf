<?xml version="1.0" ?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="my_robot">

  <!-- Define the robot's base link -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.6 0.48 0.28" />
      </geometry>
    </visual>
  </link>

  <!-- Define the left wheel -->
  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.0635" length="0.04" />
      </geometry>
    </visual>
  </link>

  <!-- Define the right wheel -->
  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.0635" length="0.04" />
      </geometry>
    </visual>
  </link>

  <!-- Define the left wheel joint -->
  <joint name="left_wheel_joint" type="continuous">
    <origin xyz="0 -0.175 -0.1" rpy="1.57 0 0" />
    <parent link="base_link" />
    <child link="left_wheel" />
    <axis xyz="0 0 1" />
  </joint>

  <!-- Define the right wheel joint -->
  <joint name="right_wheel_joint" type="continuous">
    <origin xyz="0 0.175 -0.1" rpy="1.57 0 0" />
    <parent link="base_link" />
    <child link="right_wheel" />
    <axis xyz="0 0 1" />
  </joint>

  <!-- laser link -->
  <link name="laser">
    <visual>
      <geometry>
        <cylinder radius="0.035" length="0.02" />
      </geometry>
    </visual>
  </link>

  <joint name="laser_joint" type="fixed">
    <origin xyz="0.25 0 -0.01" rpy="0 0 3.14" />
    <parent link="base_link" />
    <child link="laser" />
  </joint>

  <!-- IMU/camera -->
  <link name="imu_link">
    <visual>
      <geometry>
        <cylinder radius="0.035" length="0.02" />
      </geometry>
    </visual>
  </link>
  <joint name="imu_joint" type="fixed">
    <origin xyz="0.28 0 0.17" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="imu_link" />
  </joint>

</robot>